@{
    ViewBag.Title = "Home Page";
}

<script src="~/Common/ueditor/ueditor.config.js"></script>

<script src="~/Common/ueditor/ueditor.all.js"></script>

<link href="~/Common/ueditor/themes/iframe.css" rel="stylesheet" />

<script src="~/Common/ueditor/lang/zh-cn/zh-cn.js"></script>

<script type="text/javascript">

    var editor = new baidu.editor.ui.Editor({

        UEDITOR_HOME_URL: '/Common/ueditor/',//配置编辑器路径

        iframeCssUrl: '/Common/ueditor/themes/iframe.css',//样式路径

        initialContent: '欢迎使用ueditor',//初始化编辑器内容

        autoHeightEnabled: true,//高度自动增长

        minFrameHeight: 500//最小高度

    });

    editor.render('myEditor');

</script>

@using (Html.BeginForm("Index","Home", FormMethod.Post))
{
    <textarea id="myEditor" name="myEditor"></textarea>
    <input type="submit" value="提交" />
}